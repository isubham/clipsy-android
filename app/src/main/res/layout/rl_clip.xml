<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"

    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- row 1 => user pic | name | ago-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/rl_clip_profile_pic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/boy003" />

            <TextView
                android:id="@+id/rl_clip_author"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="0.8"
                android:text="hell world"
                android:textStyle="bold" />

            <!-- ids -->
            <TextView
                android:id="@+id/rl_clip_id"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="author id"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/rl_clip_author_id"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="author id"
                android:textStyle="bold"
                android:visibility="gone" />
            <!-- end of ids -->


        </LinearLayout>

        <LinearLayout
            android:background="@color/grey_100"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            ></LinearLayout>

        <!-- row 3 => content -->
        <TextView
            android:id="@+id/rl_clip_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Content" />

         <LinearLayout
            android:background="@color/grey_100"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            ></LinearLayout>

        <TextView
                android:id="@+id/rl_clip_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:text="20 march 2018" />

    </LinearLayout>
</android.support.v7.widget.CardView>