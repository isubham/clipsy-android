<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    tools:context=".fragments.fragment_profile">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/boy003"
        android:id="@+id/choose_avatar_icon"
        />

    <TextView
        android:id="@+id/fragment_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Profile name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fragment_profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:text="Profile email"
        android:textColor="@color/blue_600" />

    <Button
        android:id="@+id/rx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/indigo_500"
        android:minHeight="14dp"
        android:text="Follow"
        android:textAllCaps="false"
        android:textColor="@color/indigo_50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1dp">

        <TextView
            android:id="@+id/fragment_profile_clips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:backgroundTint="@color/grey_50"
            android:gravity="center"
            android:minHeight="14dp"
            android:text="Clips"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fragment_profile_followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:backgroundTint="@color/grey_300"
            android:gravity="center"
            android:minHeight="14dp"
            android:text="Followers"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/fragment_profile_following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:backgroundTint="@color/grey_300"
            android:gravity="center"
            android:minHeight="14dp"
            android:text="Following"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>
