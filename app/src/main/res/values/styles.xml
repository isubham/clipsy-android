<resources>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="button">
        <item name="android:elevation">0sp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="noStyleButton" parent="button">
        <item name="android:background">@drawable/no_button_style</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="primaryButton" parent="button">
        <item name="android:background">@drawable/primary_button_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="secondaryButton" parent="button">
        <item name="android:background">@drawable/secondary_button_style</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="primaryBigButton" parent="button">
        <item name="android:background">@drawable/primary_big_button_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="secondaryBigButton" parent="button">
        <item name="android:background">@drawable/secondary_big_button_style</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="primaryEditText" >
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TranslucentDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/transparentWhite</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_gravity">center</item>
    </style>


</resources>
